<!-- views/scheduleMessage.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schedule Message</title>
</head>
<body>
    <h1>Schedule a Message</h1>
    <% if (message) { %>
        <p><%= message %></p>
    <% } %>
    <form action="/scheduleMessage" method="POST">
        <label for="message">Message:</label>
        <input type="text" id="message" name="message" required>
        <br>
        <label for="day">Day (YYYY-MM-DD):</label>
        <input type="date" id="day" name="day" required>
        <br>
        <label for="time">Time (HH:MM):</label>
        <input type="time" id="time" name="time" required>
        <br>
        <button type="submit">Schedule Message</button>
    </form>
    <br>
    <a href="/messages">View All Messages</a>
</body>
</html>
